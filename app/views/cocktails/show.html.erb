
<h2><%= @cocktail.name %></h2>

<%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
<ul>
<% @cocktail.doses.each do |dose|%>
 <li><%= dose.description + '-' + dose.ingredient.name %>

 <%= link_to "Destroy this dose", dose_path(dose),
      method: :delete,
      data: { confirm: "Are you sure?" },  class: "btn btn-danger" %>
      </li>
<% end %>
</ul>
<!-- <div class="container"> -->

  <div class="margin20">
  <%= link_to "Add a dose", new_cocktail_dose_path(@cocktail), class: "btn btn-primary"  %>
  </div>


  <div class="margin20">
  <%= link_to "Back to cocktails", cocktails_path, class: "btn btn-primary" %>
  </div>
