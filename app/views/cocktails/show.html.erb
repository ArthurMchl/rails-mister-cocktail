<h2><%= @cocktail.name %></h2>

<%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
<% @cocktail.doses.each do |dose|%>
 <li><%= dose.description %> </li>
 <li> <%= dose.ingredient.name %> </li>

 <%= link_to "Destroy this dose", dose_path(dose),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
<% end %>

<div class="margin20">
<%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %>
</div>


<div class="margin20">
<%= link_to "Back to cocktails", cocktails_path %>
</div>
